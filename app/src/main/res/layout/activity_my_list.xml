<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마이리스트"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/collectBtn"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:text="컬렉션"
            android:textAlignment="textStart"
            android:textColor="#00BCD4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/angleBtn2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:text="표시"
            app:icon="@drawable/angle_image"
            app:iconGravity="start"
            app:iconSize="16sp"
            app:iconTint="#00BCD4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/collectBtn2"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:text="관심 레스토랑"
            android:textAlignment="textStart"
            android:textColor="#00BCD4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/angleBtn3"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:text="표시"
            app:icon="@drawable/angle_image"
            app:iconGravity="start"
            app:iconSize="16sp"
            app:iconTint="#00BCD4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="홈"
            app:icon="@drawable/home_icon"
            app:iconGravity="top"
            app:iconSize="30sp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/searchBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="검색"
            app:icon="@drawable/search_icon"
            app:iconGravity="top"
            app:iconSize="30sp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/listBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="찜"
            app:icon="@drawable/mark_icon"
            app:iconGravity="top"
            app:iconSize="30sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/calBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="달력"
            app:icon="@drawable/calendar_icon"
            app:iconGravity="top"
            app:iconSize="30sp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/signBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="가입"
            app:icon="@drawable/user_image"
            app:iconGravity="top"
            app:iconSize="30sp"
            app:iconTint="#000000" />
    </LinearLayout>
</LinearLayout>