<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filterView"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:text="필터"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="X"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tableBtn1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:hint="미선택"
                android:text="테이블 유형"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tableBtn2"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text=">"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/foodBtn1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:hint="미선택"
                android:text="음식 종류"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/foodBtn2"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text=">"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/payBtn1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:hint="전체"
                android:text="1인당 가격"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/payBtn2"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text=">"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/areaBtn1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:hint="미선택"
                android:text="지역"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/areaBtn2"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text=">"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/envirnBtn1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:hint="미선택"
                android:text="분위기"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button54"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text=">"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#D5D5D5"
            android:text="초기화"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="적용"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>